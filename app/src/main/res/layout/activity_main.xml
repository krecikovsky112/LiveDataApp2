<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/numberText" android:textSize="50sp"
            android:textColor="@android:color/black" android:textAlignment="center" android:layout_marginTop="200dp"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/start"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/numberInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numberInput"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/numberText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:layout_marginEnd="99dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Seconds"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/stop"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>